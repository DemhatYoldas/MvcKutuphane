@model MvcKutuphane.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Güncelle</h2>

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom: 15px">
            <label>Kitap ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px;">
            <label>Kategori Adı</label>
            <br />
            @Html.DropDownListFor(k => k.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, "Lütfen bir kategori seçin", new { @class = "form-control" })
        </div>
        <div style="margin-top:15px;">
            <label>Yazar Adı</label>
            <br />
            @Html.DropDownListFor(y => y.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, "Lütfen bir yazar seçin", new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Basım Yılı </label>
            @Html.TextBoxFor(y => y.BASIMYIL, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yayın EVi </label>
            @Html.TextBoxFor(y => y.YAYINEVI, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Sayfa </label>
            @Html.TextBoxFor(y => y.SAYFA, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Durum </label>
            @Html.TextBoxFor(y => y.DURUM, new { @class = "form-control" })
        </div>
        <button class="btn btn-success"> Güncelle </button>
    </div>
}
