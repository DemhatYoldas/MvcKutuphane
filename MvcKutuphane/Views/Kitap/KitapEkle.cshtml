@model MvcKutuphane.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KitapEkle</h2>

<form class="form-group" method="post">
    <div style="margin-top:15px;">
        <label>Kitap Adı</label>
        <br />
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Kategori Adı</label>
        <br />
        @Html.DropDownListFor(k => k.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1,"Lütfen bir kategori seçin", new { @class = "form-control"  })
    </div>
    <div style="margin-top:15px;">
        <label>Yazar Adı</label>
        <br />
        @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, "Lütfen bir yazar seçin", new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Basım Yılı</label>
        <br />
        @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Yayınevi Adı</label>
        <br />
        @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Sayfa Sayısı</label>
        <br />
        @Html.TextBoxFor(k => k.SAYFA, new { @class = "form-control" })
    </div>
    @*<div style="margin-top:15px;">
        <label>Durum</label>
        <br />
        @Html.TextBoxFor(k => k.DURUM, new { @class = "form-control" })
    </div>*@
    <input type="hidden"  name="DURUM" value="True"/>
    <div style="margin-top:15px">
        <button class="btn btn-success" id="BtnEkle">Kitap Ekle</button>
    </div>
</form>