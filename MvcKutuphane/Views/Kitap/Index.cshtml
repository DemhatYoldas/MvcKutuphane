@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>
@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;"
         class="form-control">
        <b>Aranacak Kitap Adını Grin : </b>@Html.TextBox("p")
        <input type="submit" value="Ara" class="btn btn-success" />
    </div>

}

<table class="table table-bordered table table-striped">
    <tr>
        <th>Kitap Id</th>
        <th>Kitap Adı</th>
        <th>Kategori Adı</th>
        <th>Yazar Adı</th>
        <th>Basım Yılı</th>
        <th>Yayınevi Adı</th>
        <th>Sayfa Sayısı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.TBLKATEGORI.AD</td>
            <td>@item.TBLYAZAR.AD @item.TBLYAZAR.SOYAD</td>
            <td>@item.BASIMYIL</td>
            <td>@item.YAYINEVI</td>
            <td>@item.SAYFA</td>
            <td>@item.DURUM</td>
            <td>
                <a href="/Kitap/KitapSil/@item.ID" class="btn btn-danger"> Sil</a>
            </td>
            <td>
                <a href="/Kitap/KitapGetir/@item.ID" class="btn btn-warning"> Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-success"> Kitap Ekle</a>
