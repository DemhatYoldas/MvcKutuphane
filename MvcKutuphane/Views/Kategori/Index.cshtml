@using MvcKutuphane.Models.Entity
@model  List<TBLKATEGORI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategori</h2>
<br />
<table class="table table-bordered table table-striped">
    <tr>
        <th>Kategori Id</th>
        <th>Kagtegori Adı</th>
        <td>Durum</td>
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>

    @foreach (var item in Model)
     {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>
                @if (item.DURUM == true)
                {
                    <span class="badge badge-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-danger">Pasif</span>
                }
            </td>
            <td>
                <a href="/Kategori/KategoriSil/@item.ID" class="btn btn-danger btn-circle">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
            <td>
                <a href="/Kategori/KategoriGetir/@item.ID" class="btn btn-warning"> Güncelle</a>
            </td>
        </tr>
     }
</table>
<a href="/Kategori/KategoriEkle/" class="btn btn-success"> Kategori Ekle</a>