@model MvcKutuphane.Models.Entity.TBLDUYURULAR

@{
    ViewBag.Title = "DuyuruGetir";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

@using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
{
    <div style="margin-top:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>Kategori Adı</label>
        @Html.TextBoxFor(k => k.KATEGORI, new { @class = "form-control" })
        <br />
        <label>İçerik</label>
        @Html.TextBoxFor(k => k.ICERIK, new { @class = "form-control" })
        <br />
        <label>Durum</label>
        @Html.DropDownListFor(k => k.Durum, new List<SelectListItem>
        {
            new SelectListItem { Text = "Lütfen Seçiniz", Value = "", Disabled = true, Selected = Model.Durum == null },
            new SelectListItem { Text = "Aktif", Value = "True"},
            new SelectListItem { Text = "Pasif", Value = "False"}
        }, new { @class = "form-control", id = "durumDropdown" })
        <br />
        <div>
            <button class="btn btn-warning">Güncelle</button>
        </div>
    </div>
}