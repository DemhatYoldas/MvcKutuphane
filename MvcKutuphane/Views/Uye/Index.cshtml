@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<TBLUYELER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üyeler</h2>

<link href="~/Content/PagedList.css" rel="stylesheet" />

<table class="table table-bordered table table-striped">
    <tr>
        <th>Üye Id</th>
        <th>Üye Adı</th>
        <th>Üye Soyadı</th>
        <th>Mail</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Fotoğraf</th>
        <th>Telefon</th>
        <th>Okul</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.SOYADI</td>
            <td>@item.MAIL</td>
            <td>@item.KULLANICIADI</td>
            <td>@item.SIFRE</td>
            <td>@item.FOTOGRAF</td>
            <td>@item.TELEFON</td>
            <td>@item.OKUL</td>
            <td>
                <a href="/Uye/UyeSil/@item.ID" class="btn btn-danger btn-circle"><i class="fas fa-trash"></i> </a>
            </td>
            <td>
                <a href="/Uye/UyeGetir/@item.ID" class="btn btn-warning"> Güncelle</a>
            </td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Uye/UyeEkle/" class="btn btn-success"> Uye Ekle</a>
