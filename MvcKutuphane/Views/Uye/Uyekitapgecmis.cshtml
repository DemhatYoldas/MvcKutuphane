@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET> 

@{
    ViewBag.Title = "Uyekitapgecmis";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

<h2>Üye: @ViewBag.u1</h2>
<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Kitap Adı</th>
                    <th>Personel</th>
                    <th>Alış Tarihi</th>
                    <th>İade Tarihi</th>
                  
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TBLKITAP.AD</td>
                        <td>@item.TBLPERSONEL.AdSoyad</td>
                        <td>@Convert.ToDateTime(item.ALISTARIH).ToString("dd/MM/yyyy")</td>
                        <td>@Convert.ToDateTime(item.IADETARIH).ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


