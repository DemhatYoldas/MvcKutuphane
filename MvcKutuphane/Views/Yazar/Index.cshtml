@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazar</h2>
<br />
<table class="table table-bordered table table-striped">
    <tr>
        <th>Yazar Id</th>
        <th>Yazar Ad</th>
        <th>Yazar Soyad</th>
        <th>Yazar Detay</th>
        <th>Yazar Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.SOYAD</td>
            <td>
                @if (!string.IsNullOrEmpty(item.YAZARRESIM))
                {
                    <img class="img-thumbnail" src="@Url.Content(item.YAZARRESIM)" alt="Yazar Resimi" style="max-width: 100px; max-height: 100px; ">
                }
                else
                {
                    <span>Resim Yok</span>
                }
            </td>
            <td>@item.DETAY</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
            <td>
                <a href="/Yazar/YazarGetir/@item.ID" class="btn btn-warning"> Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Yazar/YazarEkle/" class="btn btn-success"> Yazar Ekle</a>

