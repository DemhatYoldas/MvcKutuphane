@model MvcKutuphane.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>YazarGetir</h2>

@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom: 15px">
            <label>Yazarın Id</label>
            @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yazarın Adı</label>
            @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yazarın Soyadı</label>
            @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Yazar Resim</label>
            @Html.TextBoxFor(y => y.YAZARRESIM, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yazarın Hakkında</label>
            @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })
        </div>
        <button class="btn btn-success"> Güncelle </button>
    </div>
}
