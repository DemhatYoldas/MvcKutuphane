@model MvcKutuphane.Models.Entity.TBLUYELER

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Head içeriği buraya gelebilir -->
</head>
<body>
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="d-flex justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Profilim</h6>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="profile-image" style="width: 100%; max-width: 200px; height: auto; border-radius: 50%; overflow: hidden; margin: auto;">
                                <img id="profilResmiOnizleme" src="@Model.FOTOGRAF" alt="Profil Resmi" style="object-fit: cover; width: 100%; height: 100%;">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        @using (Html.BeginForm("Index2", "Panelim", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            <div class="col-md-6 mb-2">
                                @Html.HiddenFor(x => x.ID)
                                <label for="inputUsername" class="form-label">Kullanıcı Adı</label>
                                @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 mb-2">
                                <label for="inputFirstName" class="form-label">Ad</label>
                                @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 mb-2">
                                <label for="inputLastName" class="form-label">Soyad</label>
                                @Html.TextBoxFor(x => x.SOYADI, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 mb-2">
                                @Html.HiddenFor(x => x.MAIL)
                                <label for="inputUsername" class="form-label">Telefon</label>
                                @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 mb-2">
                                <label for="inputSchool" class="form-label">Okul</label>
                                @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 mb-2">
                                <label for="inputPassword" class="form-label">Şifre</label>
                                @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 mb-2">
                                <label for="inputFirstName" class="form-label">Profil Resmi</label>
                                @Html.EditorFor(x => x.FOTOGRAF, new { htmlAttributes = new { @class = "form-group", type = "file" } })
                            </div>
                            <div class="col-md-6 mb-2">
                                <button type="submit" class="btn btn-warning">Düzenle</button>
                            </div>

                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
