@model MvcKutuphane.Models.Entity.TBLUYELER

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>

    <title>Kütüphane Profil Bilgilerim</title>


</head>

<body>
    <div class="container mt-5">
        <div class="form-container">
            <h3 class="mb-4">Kütüphane Profil Bilgilerim</h3>

            <div class="text-center mt-4">
                <div class="profile-image" style="width: 200px; height: 200px; border-radius: 50%; overflow: hidden; margin: auto;">
                    <!-- Mevcut profil resmini gösterme -->
                    <img id="profilResmiOnizleme" src="@Model.FOTOGRAF" alt="Profil Resmi" style="object-fit: cover; width: 100%; height: 100%;" />
                </div>
                <br />
                <!-- Yeni profil resmi seçme işlemi için gizli input alanı -->
                <input type="file" id="profilResmi" name="FOTOGRAF" accept="image/*" style="display: none;" />
                <!-- Profil Resmi Değiştir butonu için -->
                <button class="btn btn-primary" onclick="openFileInput()">Profil Resmi Değiştir</button>

                <script>
                    function openFileInput() {
                        // Dosya seçme inputunu açma
                        document.getElementById("profilResmi").click();
                    }

                    // Dosya seçildiğinde çalışacak fonksiyon
                    document.getElementById("profilResmi").addEventListener("change", function (event) {
                        var file = event.target.files[0]; // Dosyayı al

                        // Dosyanın bir resim olup olmadığını kontrol et
                        if (file && file.type.includes("image")) {
                            var reader = new FileReader();

                            reader.onload = function (e) {
                                // Dosya verisini al ve önizleme yap
                                document.getElementById("profilResmiOnizleme").src = e.target.result;
                            };

                            reader.readAsDataURL(file); // Resmi önizle
                        }
                    });
                </script>
                <br />
                @using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputSchool">ID</label>
                            @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputUsername">Kullanıcı Adı</label>
                            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputFirstName">Ad</label>
                            @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputLastName">Soyad</label>
                            @Html.TextBoxFor(x => x.SOYADI, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail">Mail</label>
                            @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputUsername">Telefon</label>
                            @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputSchool">Okul</label>
                            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword">Şifre</label>
                            @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-warning">Düzenle</button>

                }
            </div>
        </div>
        <br />

</body>

</html>
