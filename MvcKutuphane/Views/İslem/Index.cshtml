@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>İadesi Alınan Kitap Listesi </h2>

<table class="table table-bordered table table-striped">
    <tr>
        <th>İşlem Id</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarih</th>
        <th> Detaylar</th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.TBLKITAP.AD</td>
            <td>@item.TBLUYELER.AD @item.TBLUYELER.SOYADI</td>
            <td>@item.TBLPERSONEL.AdSoyad</td>
            <td>@Convert.ToDateTime(item.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(item.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>

            <td>
                <a href="/Odunc/Odunciade/@item.ID" class="btn btn-info">Detaylar</a>
            </td>
        </tr>
    }
</table>

