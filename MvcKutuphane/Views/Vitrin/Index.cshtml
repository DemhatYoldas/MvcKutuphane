</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top ">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="index.html">Kütüphane Otomasyonu</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="#hero">Anasayfa</a></li>
                    <li><a class="nav-link scrollto" href="#about">Hakkımızda</a></li>

                    <li><a class="nav-link scrollto" href="#team">Kitaplar</a></li>

                    <li><a class="nav-link scrollto" href="#contact">İletişim</a></li>
                    <li><a class="getstarted scrollto" href="/Login/Girisyap">Giriş Yap</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center">

        <div class="container">
            <div class="row">
                <div class="col-lg-6 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1" data-aos="fade-up" data-aos-delay="200">
                    <h1>Kütüphanemize Hoşgeldiniz</h1>
                </div>
                <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="200">
                    <img src="~/Arsha/assets/img/book.png" class="img-fluid animated" alt="">
                </div>
            </div>
        </div>

    </section><!-- End Hero -->

    <main id="main">


        <!-- ======= About Us Section ======= -->
        <section id="about" class="about">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>Hakkımızda</h2>
                </div>
                <div class="row content">
                    <div class="row-cols-lg-auto">
                        @foreach (var item in Model.Deger2)
                        {
                            <p>@item.ACIKLAMA</p>
                        }
                    </div>
                </div>

            </div>
        </section><!-- End About Us Section -->
        <!-- ======= Team Section ======= -->
        <section id="team" class="team section-bg">
            <div class="container" data-aos="fade-up">
                <div class="section-title">
                    <h2>Kitaplar</h2>
                </div>
                <div class="row">
                    @foreach (var item in Model.Deger1)
                    {
                        <div class="col-md-6 col-lg-4">
                            <!-- Resme tıklama ile modalı açan kısım -->
                            <a href="#" class="portfolio-item-link" data-toggle="modal" data-target="#portfolioModal@(item.ID)">
                                <div class="portfolio-item">
                                    <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                        <div class="portfolio-item-caption-content text-center text-white">
                                            <i class="fas fa-plus fa-3x"></i>
                                        </div>
                                    </div>
                                    <img class="img-fluid card-img-top img-thumbnail" src="@item.KITAPRESIM" alt="">
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </section>
        <!-- End Team Section -->


        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>Bana Ulaşın</h2>

                </div>

                <div class="row">

                    <div class="col-lg-5 d-flex align-items-stretch">
                        <div class="info">
                            <div class="address">
                                <i class="bi bi-geo-alt"></i>
                                <h4>Lokasyon:</h4>
                                <p>A108 Adam Street, New York, NY 535022</p>
                            </div>

                            <div class="email">
                                <i class="bi bi-envelope"></i>
                                <h4>Email:</h4>
                                <p>demhatyldas@gmail.com</p>
                            </div>


                            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>
                        </div>

                    </div>

                    <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                        @using (Html.BeginForm("Index", "Vitrin", FormMethod.Post))
                        {
                            <form role="form" class="php-email-form">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label for="name">Adınız ve Soyadınız</label>
                                        <input type="text" name="AD" class="form-control" id="name" data-validation-required-message="Lütfen Adınızı Ve Soyadınızı Giriniz." data- required>
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="name">Email Adresiniz</label>
                                        <input type="email" class="form-control" name="MAIL" id="email" validation-required-message="Lütfen Email Adresinizi Giriniz." required>
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="name">Konu</label>
                                    <input type="text" class="form-control" name="KONU" id="subject" data-validation-required-message="Lütfen Konu Başlını Giriniz." required>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <label for="name">Mesaj</label>
                                    <textarea class="form-control" name="MESAJ" rows="10" data-validation-required-message="Lütfen Mesaj Alanını Giriniz." required></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="text-center "><button class="btn btn-success" type="submit">Gönder</button></div>
                            </form>
                        }
                    </div>

                </div>

            </div>
        </section><!-- End Contact Section -->

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>Kütüphane Modülü</h3>
                        <p class="lead mb-0">
                            Bu Proje MVC5 platformunda bootstrap, js, css tasarımları ile hazırlandı
                        </p>
                    </div>


                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Sosyal Medya</h4>
                        <p>Aşağıdaki hesaplardan bana ulaşabilirsiniz</p>
                        <div class="social-links mt-3">
                            <a href="https://github.com/DemhatYoldas" class="github"><i class="bx bxl-github"></i></a>
                            <a href="https://www.instagram.com/demhatyoldas_/" class="instagram"><i class="bx bxl-instagram"></i></a>
                            <a href="https://join.skype.com/invite/l0aSfVgFjDH6" class="google-plus"><i class="bx bxl-skype"></i></a>
                            <a href="https://www.linkedin.com/in/demhatyoldas/" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="container footer-bottom clearfix">
            <div class="copyright">
                &copy; Copyright <strong><span>JR.DEVELOPER 2022</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/arsha-free-bootstrap-html-template-corporate/ -->
                Designed by <a href="http://jrdevelopers.com.tr/">JR.DEVELOPER</a>
            </div>
        </div>
    </footer>
    <!-- End Footer -->
    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    @foreach (var item in Model.Deger1)
    {

        <!-- Modal içeriğini düzenlemek için döngüyü kullanın -->
        <div class="portfolio-modal modal fade" id="portfolioModal@(item.ID)" tabindex="-1" role="dialog" aria-labelledby="portfolioModalLabel" aria-hidden="true" data-keyboard="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <!-- Kapatma butonunu ekle -->
                    <div class="modal-header">
                        <button type="button" class="btn btn-close btn-danger" data-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body text-left">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <!-- Portfolio Modal - Title -->
                                    <h5 class="portfolio-modal-title text-secondary text-uppercase mb-0">@item.AD</h5>
                                    <br/>
                                    <!-- Portfolio Modal - Image -->
                                    <img src="@item.KITAPRESIM" alt="" style="max-width: 80%; height: auto;">
                                    <br/>
                                    <!-- Portfolio Modal - Text -->
                                    <p class="mb-3">@item.BASIMYIL</p>
                                    <p class="mb-3">@item.TBLYAZAR.AD @item.TBLYAZAR.SOYAD</p>
                                    <p class="mb-3">@item.YAYINEVI</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

    <!-- Vendor JS Files -->
    <script src="/Arsha/assets/vendor/aos/aos.js"></script>
    <script src="/Arsha/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/Arsha/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/Arsha/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="/Arsha/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="/Arsha/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="/Arsha/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="/Arsha/assets/js/main.js"></script>

    <script>
        $(document).ready(function () {
            // Resme tıklama ile modalı açma
            $(".portfolio-item-link").click(function (e) {
                e.preventDefault();
                var modalId = $(this).data("target");
                $(modalId).modal("show");
            });

            // Kapatma butonuna tıklama ile modalı kapatma
            $(".btn-close").click(function () {
                $(".portfolio-modal").modal("hide");
            });

            // Modal dışına tıklayarak modalı kapatma
            $(document).on("click", function (e) {
                if ($(e.target).hasClass("portfolio-modal")) {
                    $(".portfolio-modal").modal("hide");
                }
            });
        });
    </script>
</body>

</html>